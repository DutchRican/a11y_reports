{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "models/ScanResult.js",
    "routes/scanResults.js",
    "index.js",
    "routes/__tests__/scanResults.test.js",
    "__tests__/api.test.js"
  ],
  "exclude": [
    "node_modules"
  ]
}